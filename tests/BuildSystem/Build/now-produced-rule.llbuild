# RUN: %{llbuild} buildsystem build --serial --chdir %t.build -f build-2.llbuild > %t.2.out
# RUN: echo "END-OF-FILE" >> %t.2.out
# RUN: %{FileCheck} --check-prefix CHECK-VERSION-2 --input-file %t.2.out %s
