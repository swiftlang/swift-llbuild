##### VERSION-BEGIN-1 #####

client:
  name: basic

targets:
  "": ["<all>"]

commands:
  "C.2":
    tool: shell
    description: COMPILE
    inputs: ["a.h"]
    args: cp a.h a.c
    outputs: ["<all>"]

##### VERSION-END-1 #####

