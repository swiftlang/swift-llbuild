client:
  name: basic

targets:
  "": ["<all>"]

commands:
  "C.1":
    tool: shell
    description: GENERATE-HEADER
    inputs: ["a.i"]
    args: cp a.i a.h
    outputs: ["a.h"]

  "C.2":
    tool: shell
    description: COMPILE
    inputs: ["a.h"]
