# RUN: rm -rf %t.build
# RUN: mkdir -p %t.build
# RUN: cp %s %t.build/build.llbuild
# RUN: %{llbuild} buildsystem build --chdir %t.build build.llbuild > %t-A.out
# RUN: %{FileCheck} --input-file %t-A.out %s --check-prefix=CHECK-A
#
# CHECK-A: echo target-A

# RUN: %{llbuild} buildsystem build --chdir %t.build build.llbuild B > %t-B.out
# RUN: %{FileCheck} --input-file %t-B.out %s --check-prefix=CHECK-B
