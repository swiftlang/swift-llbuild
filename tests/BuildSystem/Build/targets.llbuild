client:
  name: basic

targets:
  "": ["target-A"]
  "B": ["target-B"]

commands:
  target-A:
    tool: shell
    outputs: ["target-A"]
    args: echo target-A
  target-B:
    tool: shell
    outputs: ["target-B"]
    args: echo target-B
