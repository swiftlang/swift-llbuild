# This rule is included so there is an "update" command done, it is never actually run.
rule GENERATOR
     command = false
     generator = 1
rule CP
     command = cp ${in} ${out}
rule CAT
     command = cat ${in} > ${out}
build build.ninja: GENERATOR
build output-1: CP input-1
build output-2: CP input-2
build output: CAT output-1 output-2

